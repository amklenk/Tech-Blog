<article class="post">
    <div class="card text-white w-80 p-2 post" id="post1">
        <div class="card-body">
            <h4 class="card-title">{{post.title}}</h4>
            <h5 class="card-subtitle mb-2 text-muted">Posted by: {{post.user.username}} on
                {{post.created_at}} </h5>
            <p class="card-text">{{post.text}}</p>
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
    </div>
</article>

{{#if loggedIn}}
<div class="card text-white w-80 p-2 mb-2 comment">
    <div class="card-body">
        <form class="comment-form">
            <div>
                <textarea name="comment-body"></textarea>
            </div>

            <div>
                <button type="submit" id="comment">Comment</button>
            </div>
        </form>
    </div>
</div>
{{/if}}

<div class="card text-white w-80 p-2 mb-2 comment">
    <div class="comments">
        {{#each post.comments}}
        <section class="comment mb-3">
            <div class="meta">
                {{user.username}} on {{created_at}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </section>
        {{/each}}
    </div>
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}