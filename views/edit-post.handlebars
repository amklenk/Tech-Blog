<article>
    <a href="/dashboard" class="text-decoration-none text-white">&larr; Back to dashboard</a>
    <div class="card text-white w-80 p-2 mb-2 comment">
        <div class="card-body">
            <h2>Edit post</h2>
            <form class="edit-post-form">
                <div class="container">
                    <div class="row mb-2">
                        <input name="post-title" type="text" value="{{post.title}}" />
                    </div>
                    <div class="row">
                        <input name="post-text" type="text" value="{{post.text}}" />
                    </div>
                </div>

                <div class="mb-2">
                    by you on {{format_date post.created_at}}
                    |
                    <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
                        post.comments.length}}</a>
                </div>
                <button id="save" type="submit" class="edit-post-btn">Save post</button>
                <button id="delete" type="button" class="delete-post-btn">Delete post</button>
            </form>
        </div>
    </div>
</article>

<div class="card text-white w-80 p-2 mb-2 comment">
    <div class="card-body">
        <form class="comment-form">
            <div>
                <textarea name="comment-body"></textarea>
            </div>

            <div>
                <button type="submit" id="comment">Comment</button>
            </div>
        </form>
    </div>
</div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>