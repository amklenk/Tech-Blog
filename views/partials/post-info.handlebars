<article class="post">
            <div class="card text-white w-80 p-2 post" id="post1">
                <div class="card-body">
                    <h4 class="card-title">{{title}}</h4>
                    <h5 class="card-subtitle mb-2 text-muted">Posted by: {{user.username}} on
                        {{format_date created_at}} </h5>
                    <p class="card-text">{{text}}</p>
                    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
                </div>
            </div>
        </article>